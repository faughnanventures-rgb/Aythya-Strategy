# ============================================
# AYTHYA STRATEGY - Environment Variables
# ============================================
# Copy this file to .env.local for development
# NEVER commit .env.local to version control
# ============================================

# ============================================
# STORAGE MODE (REQUIRED)
# ============================================
# Options: 'local' | 'supabase'
# - 'local': Uses localStorage (development only)
# - 'supabase': Uses Supabase PostgreSQL (production)
NEXT_PUBLIC_STORAGE_MODE=supabase

# ============================================
# SUPABASE (REQUIRED)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# 
# Project URL - looks like https://xxxx.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anon (public) key - safe for browser, starts with eyJ...
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key - SECRET! Server-only, starts with eyJ...
# Only needed for admin operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# ANTHROPIC CLAUDE API (REQUIRED)
# ============================================
# Get your API key from: https://console.anthropic.com/
# SECURITY: This is server-side only - never expose to client
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Model configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TIMEOUT_MS=60000

# ============================================
# RATE LIMITING
# ============================================
# Uses Supabase by default for distributed rate limiting
# For high-traffic, consider Upstash Redis
RATE_LIMIT_REQUESTS_PER_HOUR=20
RATE_LIMIT_REQUESTS_PER_DAY=100

# Optional: Use in-memory rate limiting in development
USE_MEMORY_RATE_LIMIT=false

# ============================================
# SECURITY
# ============================================
# Skip CSRF validation in development (for testing only)
SKIP_CSRF_IN_DEV=false
NEXT_PUBLIC_SKIP_CSRF=false

# ============================================
# OAUTH (Optional)
# ============================================
# Google OAuth - configure in Supabase Dashboard
# Go to: Authentication > Providers > Google
# AUTH_GOOGLE_ID and AUTH_GOOGLE_SECRET are configured in Supabase, not here

# ============================================
# MONITORING (Optional but Recommended)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Enable debug logging (development only)
DEBUG=false

# ============================================
# EMAIL SERVICE (Required for notifications)
# ============================================
# Get from https://resend.com/
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# CRON JOBS (Required for scheduled tasks)
# ============================================
# Secret to authenticate cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET=your-secret-here

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Mock AI responses (for UI testing without API costs)
MOCK_AI_RESPONSES=false

# ============================================
# DEPRECATED - Keep for reference
# ============================================
# These are no longer used but kept for reference
# AUTH_SECRET - Now handled by Supabase
# NEXTAUTH_URL - Now handled by Supabase
# UPSTASH_REDIS_REST_URL - Using Supabase for rate limiting
